<h2 class="text-3xl font-bold text-center mb-6">新規登録</h2>

<%= form_with model: @user, url: user_registration_path, class: "space-y-6" do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label for="user_name" class="block text-lg font-semibold mb-2">名前</label>
    <%= f.text_field :name, id: "user_name", class: "input input-bordered w-full", autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field hidden">
    <label for="user_email" class="block text-lg font-semibold mb-2">メールアドレス (非表示)</label>
    <%= f.email_field :email, id: "user_email", class: "input input-bordered w-full", value: "#{SecureRandom.uuid}@example.com", autocomplete: "email" %>
  </div>

  <div class="field">
    <label for="user_password" class="block text-lg font-semibold mb-2">パスワード</label>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-500">(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, id: "user_password", class: "input input-bordered w-full", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label for="user_password_confirmation" class="block text-lg font-semibold mb-2">パスワード（確認）</label>
    <%= f.password_field :password_confirmation, id: "user_password_confirmation", class: "input input-bordered w-full", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-primary w-full" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
