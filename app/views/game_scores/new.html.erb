<h1 class="text-3xl font-bold mb-6">管理者用ページ</h1>
<h1 class="text-3xl font-bold mb-6 text-center">ゲームスコアフォーム</h1>

<div class="card w-full max-w-md mx-auto bg-base-100 shadow-xl p-8">
  <%= form_with model: @game_score, url: game_scores_create_path, method: :post, class: "space-y-6" do |form| %>
    <div class="form-group">
      <%= form.label :user_id, "User ID", class: "label text-lg font-semibold" %>
      <%= form.text_field :user_id, class: "input input-bordered w-full" %>
    </div>

    <div class="form-group">
      <%= form.label :game_name, "Game Name", class: "label text-lg font-semibold" %>
      <%= form.text_field :game_name, class: "input input-bordered w-full" %>
    </div>

    <div class="form-group">
      <%= form.label :score, "Score", class: "label text-lg font-semibold" %>
      <%= form.number_field :score, step: 100, class: "input input-bordered w-full" %>
    </div>

    <div class="form-group">
      <%= form.submit "Submit", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>
