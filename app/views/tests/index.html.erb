<div class="min-h-screen bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 text-white p-8">
  <!-- ヘッダー -->
  <header class="flex justify-between items-center mb-12">
    <h1 class="text-4xl font-extrabold tracking-tight">
      電子工学科<span class="text-yellow-300">展示会</span>
    </h1>
    <button id="menu-toggle" class="text-white hover:text-yellow-300 transition-colors duration-300">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </button>
  </header>

  <!-- メインコンテンツ -->
  <main class="space-y-12">
    <!-- ボタングループ -->
    <div class="grid grid-cols-2 gap-6 max-w-2xl mx-auto">
      <% ['AAA', 'BBB', 'CCC', 'DDD'].each do |label| %>
        <button class="bg-white bg-opacity-20 hover:bg-opacity-30 text-white rounded-xl py-4 px-6 shadow-lg backdrop-blur-md transition duration-300 ease-in-out transform hover:scale-105">
          <%= label %>
        </button>
      <% end %>
    </div>

    <!-- カードセクション -->
    <div class="max-w-md mx-auto bg-white bg-opacity-10 rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition duration-300">
      <img src="assets/RyosukeTakada.jpg" alt="AAAAAA" class="w-full h-48 object-cover" />
      <div class="p-6 space-y-4">
        <h2 class="text-2xl font-bold text-yellow-300">神戸高専に入りたい？</h2>
        <p class="text-gray-300">君じゃ無理だよ...</p>
        <button class="w-full bg-gradient-to-r from-yellow-400 to-orange-500 text-white font-bold py-2 px-4 rounded-lg hover:from-yellow-500 hover:to-orange-600 transition duration-300">
          詳細を見る
        </button>
      </div>
    </div>
  </main>

  <!-- フッター -->
  <footer class="mt-16 text-center">
    <%= button_to "ログアウト", destroy_user_session_path, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-6 rounded-full transition duration-300", method: :delete %>
  </footer>

  <!-- ハンバーガーメニュー -->
  <div id="menu" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
    <div class="bg-white text-gray-800 h-full w-64 p-6 transform translate-x-full transition-transform duration-300 ease-in-out">
      <button id="close-menu" class="absolute top-4 right-4 text-gray-600 hover:text-gray-800">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      <ul class="space-y-4 mt-8">
        <% ['セクション1', 'セクション2', 'セクション3', 'セクション4'].each do |section| %>
          <li>
            <a href="#<%= section.downcase %>" class="block py-2 px-4 text-gray-700 hover:bg-gray-100 rounded-lg transition duration-300">
              <%= section %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const closeMenu = document.getElementById('close-menu');
  const menu = document.getElementById('menu');
  const menuContent = menu.querySelector('div');

  menuToggle.addEventListener('click', () => {
    menu.classList.remove('hidden');
    setTimeout(() => menuContent.style.transform = 'translateX(0)', 10);
  });

  closeMenu.addEventListener('click', () => {
    menuContent.style.transform = 'translateX(100%)';
    setTimeout(() => menu.classList.add('hidden'), 300);
  });
</script>