<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<ul>
  <li><%= @user.name %></li>
  <li>入室した時間: <%= @user.entered_at.blank? ? "未入室" : @user.entered_at %></li>
  <li>退室した時間: <%= @user.exited_at.blank? ? "未退室" : @user.exited_at %></li>
  <li><%= @user.status %></li>
</ul>

<%= link_to 'ゲームをする際はこちら', users_user_qr_path(@user), class: "btn btn-primary" %>

<% if @user.entered? %>
<%= link_to '退出用QRコード', users_exit_path, class: "btn btn-primary" %>
<% else %>
<%= link_to '入室用QRコード', users_enter_page_path, class: "btn btn-primary" %>
<% end %>
